@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>
@if (Model.Any())
{
    foreach(var role in Model)
    {
        <div class="card">
            <div class="card-header">
                @role.Id
            </div>
            <div class="card-body">
                <h4 class="card-title">@role.Name</h4>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditRole" asp-route-Id="@role.Id" class="btn btn-secondary">Edit</a>
                <a asp-controller="administration"asp-action="" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet!
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button to create the role</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}